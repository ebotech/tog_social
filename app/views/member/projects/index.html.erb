<p><%= link_to I18n.t('tog_social.projects.site.create_project'), new_member_project_path, :class => 'button add' %></p>

<div class="portlet portletB" id="profiles_list">
    <h2><span><%= I18n.t('tog_social.projects.model.moderated_by_you') %></span></h2>
    <div class="portlet_content">
        <ul>
          <% @moderator_memberships.each do |membership|%>
            <li>
              <div class="img"><%=link_to image_for_project(membership.project, 'small'), project_path(membership.project)%></div>
              <div class="info">
                <div class="title"><%= link_to membership.project.name, project_path(membership.project) %></div>
                <div id="actions">
                <%= link_to I18n.t('tog_social.projects.member.edit'), edit_member_project_path(membership.project) -%>
                <%= link_to I18n.t('tog_social.projects.member.members_pending', :size => membership.project.pending_members.size), member_project_pending_members_path(membership.project) %>
                </div>
              </div><!--  fin info -->
            <li>
          <%end%>
        </ul>
    </div>
</div>

<div class="portlet portletB" id="profiles_list">
    <h2><span><%= I18n.t('tog_social.projects.member.project_member') %></span></h2>
    <div class="portlet_content">
        <ul>
          <% @plain_memberships.each do |membership|%>
            <li>
              <div class="img"><%=link_to image_for_project(membership.project, 'small'), project_path(membership.project)%></div>
              <div class="info">
                <div class="title"><%= link_to membership.project.name, project_path(membership.project) %></div>
                <div id="actions">
                  <%= I18n.t('tog_social.projects.model.member_status') %>: <%=membership.state%>
                <br/>
                <%= link_to I18n.t('tog_social.projects.site.leave'), leave_project_path(membership.project), :confirm => I18n.t('tog_social.projects.site.leave_confirm'), :class => 'delete' %>
                </div>
              </div><!--  fin info -->
            <li>
          <%end%>
        </ul>
    </div>
</div>
